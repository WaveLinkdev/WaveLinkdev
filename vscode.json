{
  ///This the configuration file I use for visual studio code.
  ///The font i use is from randy.gg for a subscription, for an alternative i recomendd 'Fira Code'
  ///with font ligatures enabled. I have also cleared the cSpell dictionary, so fill that up with words that you want
  ///cSpell to understand like "Youtube" etc..
  //The theme is Monkai Dimmed btw
  
  //Telemetery
    "redhat.telemetry.enabled": false,
    "telemetry.enableTelemetry": false,
    "nxConsole.enableTelemetry": false,

    //Language Setup
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [80],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },

    //Editor Config
    "files.exclude": {
        "**/*.asset": true,
        "**/*.blend+": true,
        "**/*.js: { \"when\": \"$(basename).ts\" }": true,
        "**/*.meta": true,
        "**/*.prefab": true,
        "**/*.spec.ts": true,
        "*/node_modules": true,
        "react-app-env.d.ts": true
    },
    "editor.formatOnPaste": true,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "none",
    "editor.inlineSuggest.enabled": true,
    "editor.suggestSelection": "first",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    //Debugging
    "debug.onTaskErrors": "debugAnyway",

    //Extenstions Config
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": false
    },
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "gitlens.views.branches.branches.layout": "list",
    "liveServer.settings.donotShowInfoMsg": true,
    "typescript.tsserver.log": "off",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "tabnine.experimentalAutoImports": true,
    "prettier.tabWidth": 4,
    "liveServer.settings.donotVerifyTags": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "dart.flutterSdkPath": "E:\\Flutter",
    "C_Cpp.updateChannel": "Insiders",

    //Decoration
    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "RandyGG",
    "debug.console.fontFamily": "RandyGG",
    "workbench.sideBar.location": "right",
    "diffEditor.codeLens": true,
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    
    //Terminal
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.fontFamily": "",

    // - Powermode
    "powermode.enabled": true,
    "powermode.presets": "particles",
    "powermode.enableShake": false,

    //Dictionary
    "cSpell.userWords": [

    ]
}
